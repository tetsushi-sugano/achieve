<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p id="notice"><%= notice %></p>

<h2>お問い合わせをする</h2>

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :名前 %>
  <%= f.text_field :name, class: 'form-control' %>
  <br>
  <%= f.label :メールアドレス %>
  <%= f.text_field :email, class: 'form-control' %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit "確認する", class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "ブログの一覧へ戻る", blogs_path %>
</div>
</div>